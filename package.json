{
  "name": "f-pong",
  "version": "1.0.0",
  "description": "Pong game.",
  "author": "Flake Software",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win nsis",
    "build:android": "electron-builder --android"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.flake.pong",
    "productName": "f-Pong",
    "copyright": "Â© 2025 Flake Software",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
  }
}
